---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import WspIcon from "../components/icons/Wsp.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import Technologies from "../components/Technologies.astro";
import Sobremi from "../components/Sobremi.astro";
---

<Layout title="Portafolio de IsmaDev - Desarrollador y Programdor Web" description="">
  <main class="px-8">
    <SectionContainer class="py-44 pb-24">
      <img
        class="rounded-full size-12 mb-3"
        src="/public/fixita.jpeg"
        alt="ismadev"
      />
      <h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-4">
        Hola, Soy IsmaDev. <a
          href="https://www.linkedin.com/in/ismael-herrada-5b6183308/"
          target="_blank"
          rel="noopener"></a>
        <div class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </div>
      </h1>

      <h2 class="text-xl text-white lg:text-2xl opacity-80 text-wrap max-w-[700px]">
        Experiencia como desarrollador Full Stack y Apasionado por el Frontend.
        De Santiago de Chile. Apasionado por crear interfaces minimalistas.
      </h2>

      <nav class="flex gap-4 mt-4 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/ismael-herrada-5b6183308/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill
          href="https://www.linkedin.com/in/ismael-herrada-5b6183308/"
        >
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill
          href="https://www.linkedin.com/in/ismael-herrada-5b6183308/"
        >
          <MailIcon class="size-4 md:size-6" />
          Ismaismael357@gmail.com
        </SocialPill>
        <SocialPill
          href="https://www.linkedin.com/in/ismael-herrada-5b6183308/"
        >
          <WspIcon class="size-4 md:size-6" />
          WhatsApp
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-white mb-6 font-bold flex gap-x-2 items-center">Experiencia Laboral</h2>
      <Experience/>
    </SectionContainer>

    <SectionContainer id="sobremi">
      <h2 class="text-white mb-6 font-bold flex gap-x-2 items-center">Sobre Mi</h2>
      <Sobremi/>
    </SectionContainer>

    <SectionContainer id="tecnologias" class="mt-10">
      <h2 class="text-white mb-6 font-bold flex gap-x-2 items-center">Tecnologias</h2>
      <Technologies/>
    </SectionContainer>

  </main>
</Layout>
